<div class="container">
<div class="row">

    <div class="col-lg-10 col-xs-offset-1 title">
        <h2 class="bg-origin">配送先編集/一覧</h2>
    </div>
</div>
      <%= render 'customer/addresses/error', ship_city: @ship_city %>
        <%= form_with model:@ship_city,url:addresses_path do |f| %>

        <div class="row">
          <div class="col-xs-3">
            <%= f.label :"郵便番号（ハイフンなし）" %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :postcode, class: "col-xs-6" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-3">
            <%= f.label :"住所" %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :address, class: "col-xs-12" %>
          </div>
        </div>
        <div class="row">
            <div class="col-xs-3">
                <%= f.label :"宛名" %>
            </div>
            <div class="col-lg-4">
                <%= f.text_field :name, class: "col-xs-6" %>
            </div>
            <div class="col-lg-4">
              <%= f.submit '登録する',class: "btn col-xs-5 btn-success" %>
            </div>
        </div>

        <% end %>

  <div class="row">
    <div>
      <%= render 'customer/addresses/index', addresses: @addresses %>
    </div>
  </div>
</div>